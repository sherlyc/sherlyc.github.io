{
  "preset": "ts-jest",
  "testPathIgnorePatterns": ["/test-api/"],
  "coverageDirectory": "<rootDir>/server-src/coverage",
  "collectCoverageFrom": ["**/*.ts"],
  "rootDir": "../",
  "roots": ["server-src"],
  "testEnvironment": "node",
  "coveragePathIgnorePatterns": [".*\\.d\\.ts", ".*\\.spec\\.ts"],
  "transform": {
    "^.+\\.(ts|js)$": "ts-jest"
  },
  "transformIgnorePatterns": ["node_modules/(?!lodash-es)"]
}
