{
  "name": "stuff-experience-frontend",
  "version": "0.999.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test --verbose",
    "test:server": "SPADE_ENV=test jest --config ./server-src/jest.config.json",
    "test:api": "jest --config ./server-src/test-api/jest.config.json",
    "lint": "ng lint",
    "e2e": "jest --config ./e2e/jest.config.json",
    "format": "prettier --write '**/*.{js,json,css,scss,md,html,yaml,ts}'",
    "compodoc": "./node_modules/.bin/compodoc -p src/tsconfig.app.json -w -s",
    "build:ssr": "npm run build:client-and-server-bundles && npm run webpack:server",
    "serve:ssr": "node dist/server",
    "build:client-and-server-bundles": "ng build --prod && ng run stuff-experience-frontend:server",
    "webpack:server": "webpack --config webpack.server.config.ts --progress --colors"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.0.4",
    "@angular/cdk": "^7.0.4",
    "@angular/common": "^7.0.4",
    "@angular/compiler": "^7.0.4",
    "@angular/core": "^7.0.4",
    "@angular/flex-layout": "^7.0.0-beta.19",
    "@angular/forms": "^7.0.4",
    "@angular/http": "^7.0.4",
    "@angular/material": "^7.0.4",
    "@angular/platform-browser": "^7.0.4",
    "@angular/platform-browser-dynamic": "^7.0.4",
    "@angular/platform-server": "^7.0.4",
    "@angular/router": "^7.0.4",
    "@nguniversal/express-engine": "^7.0.2",
    "@nguniversal/module-map-ngfactory-loader": "^7.0.2",
    "@sentry/browser": "^4.1.1",
    "axios": "^0.18.0",
    "classlist.js": "^1.1.20150312",
    "core-js": "^2.5.7",
    "hammerjs": "^2.0.8",
    "moment": "^2.24.0",
    "p-retry": "^3.0.1",
    "rxjs": "^6.3.3",
    "time-ago-pipe": "^1.3.2",
    "ts-loader": "^5.2.2",
    "tslib": "^1.9.3",
    "web-animations-js": "^2.3.1",
    "winston": "^3.1.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-builders/jest": "^7.0.0",
    "@angular-devkit/build-angular": "^0.12.1",
    "@angular/cli": "~7.0.6",
    "@angular/compiler-cli": "^7.0.4",
    "@angular/language-service": "^7.0.4",
    "@compodoc/compodoc": "^1.1.5",
    "@types/express": "^4.16.0",
    "@types/jasmine": "^3.3.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/lodash": "^4.14.119",
    "@types/moment": "^2.13.0",
    "@types/node": "^10.12.9",
    "@types/p-retry": "^2.0.0",
    "@types/selenium-webdriver": "^3.0.14",
    "@types/supertest": "^2.0.7",
    "@types/webpack": "^4.4.22",
    "@types/winston": "^2.4.4",
    "bourbon": "4.2.7",
    "chromedriver": "^2.45.0",
    "codelyzer": "^4.5.0",
    "husky": "^1.1.0",
    "jasmine-spec-reporter": "^4.2.1",
    "jest": "^23.6.0",
    "jest-preset-angular": "^6.0.1",
    "lint-staged": "^8.1.0",
    "lodash": "^4.17.11",
    "node-sass": "^4.10.0",
    "normalize.css": "^8.0.1",
    "prettier": "1.15.3",
    "rxjs-tslint": "^0.1.5",
    "selenium-webdriver": "^4.0.0-alpha.1",
    "supertest": "^3.4.2",
    "ts-jest": "^23.10.5",
    "ts-node": "~7.0.0",
    "tslint": "^5.11.0",
    "typescript": "~3.1.6",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && ng lint && ng test --watch=false && npm run test:server"
    }
  },
  "lint-staged": {
    "**/*.{js,json,css,scss,md,html,yaml,ts}": [
      "prettier --write",
      "git add"
    ]
  }
}
